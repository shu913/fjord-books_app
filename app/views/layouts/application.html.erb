<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>

    <% if user_signed_in? %>
      <p><%= link_to "#{t('dictionary.logout')}", destroy_user_session_path, method: :delete, class: 'navbar-link' %></p>
    <% end %>
  </body>
</html>
