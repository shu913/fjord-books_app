<p id="notice"><%= notice %></p>

<h1><%= "#{t('view_name_index.index.title')}" %></h1>

<table>
  <thead>
    <tr>
      <th><%= Book.human_attribute_name(:title) %></th>
      <th><%= Book.human_attribute_name(:memo) %></th>
      <th><%= Book.human_attribute_name(:author) %></th>
      <th><%= Book.human_attribute_name(:picture) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to "#{t('dictionary.show')}", book %></td>
        <td><%= link_to "#{t('dictionary.edit')}", edit_book_path(book) %></td>
        <td><%= link_to "#{t('dictionary.destroy')}", book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "#{t('dictionary.create')}", new_book_path %>
